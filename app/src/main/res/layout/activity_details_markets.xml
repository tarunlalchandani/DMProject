<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Markets_Details.MarketsDetailsActivity">

    <ImageView
        android:id="@+id/ivDetailsMarkets"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/avani" />

    <View
        android:id="@+id/dividerMarkets"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvMarketsDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#ebebeb"
        android:text="Description"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ebebeb"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdresse"
            android:layout_width="93dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/market"
            android:text="Adresse"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvAdresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="15sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#ebebeb"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTelephone"
            android:layout_width="93dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/market"
            android:text="TÃ©lephone"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="phone"
            android:text="(509)3737-3706"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#ebebeb"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnServices"
            android:layout_width="93dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/market"
            android:text="Services"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="#ebebeb"
        android:orientation="vertical">

        <View
            android:id="@+id/dividerRate"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Rate this Market"
            android:textSize="25sp" />

        <RatingBar
            android:id="@+id/rbMarkets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="#FF4CAF50" />

    </LinearLayout>





</LinearLayout>