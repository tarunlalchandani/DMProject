<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cvFruits_Legumes"
    android:layout_width="170dp"
    android:layout_height="200dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
   cardview:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFruits_Legumes"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:background="#000000"
            android:scaleType="fitXY" />

        <ToggleButton
            android:id="@+id/favorites"
            android:layout_width="27dp"
            android:layout_height="23dp"
            android:layout_above="@+id/tvName"
            android:layout_alignRight="@+id/ivFruits_Legumes"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="85dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/toggle_image" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivFruits_Legumes"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Pommes"
            android:textStyle="bold"
            android:textColor="#C8020E"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="1000"
            android:textColor="#3F3D3D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDevise"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/tvName"
            android:layout_alignEnd="@+id/btnAddToCart"
            android:layout_alignRight="@+id/btnAddToCart"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="-7dp"
            android:layout_marginRight="-7dp"
            android:gravity="center"
            android:text="HTG/LBS"
            android:textColor="#3F3D3D"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@+id/ivFruits_Legumes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/add_to_cart"
            android:clickable="true"
            android:onClick="addToCart"
            android:text="Add to cart"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="10dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>